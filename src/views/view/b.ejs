<html>

<head>
    <meta charset="utf-8">
    <link type="image/png" sizes="32x32" rel="icon" href="/img/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>EBS Mobile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/fonts.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/elastic-width.css">
    <style type="text/css" media="print">
        @page {
            size: auto;
            /* auto is the initial value */
            margin: 0mm;
            /* this affects the margin in the printer settings */
        }

        html {
            background-color: #FFFFFF;
            margin: 10px;
            /* this affects the margin on the html before sending to printer */
        }

        body {
            margin: 0mm;
            /* margin you want for the content */
        }
    </style>
    <script src="/js/_lib/moment.js" defer></script>
</head>

<body>

    <div class="d-flex jcc aic h-50 status">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <!-- <button id="extractStylesButton">Extract Styles</button> -->

    <div class="container-md d-flex flex-column gap-0 p-0 my-2 view-order d-none" id="order"
        style="color: black !important; font-size: 0.8rem !important; border: 1px solid black; min-height: 90%; min-width: 668px;">

        <!-- ENTITY BLOCK -->
        <div class="entty-info d-flex flex-column aic position-relative p-2" id="entity"
            style="border-bottom: 1px solid black;">
            <h5 class="entity-name mb-0"></h5>
            <div class="d-flex flex-column aic" id="entity-details"></div>

            <span class="tax-type fw-500 mt-2">TAX INVOICE</span>

            <div class="position-absolute top-0 start-0 mt-2 ms-2 logo"></div>
            <div class="position-absolute top-0 end-0 me-2 mt-2 copy-type fst-italic small role-btn"
                title="Click to switch between Original/Duplicate/Transport Copies">(ORIGINAL FOR RECIPIENT)</div>

            <!-- <div
                class="position-absolute bottom-0 end-0 mb-2 me-2 btn-group bg-light rounded text-dark d-print-none z-2">
                <span class="btn btn-light share px-3" title="Share Order"><i class="bi bi-share"></i></span>
                <span class="btn btn-light print px-3" title="Print Order"><i class="bi bi-printer"></i></span>
                <span class="btn btn-light close px-3" title="Close Order"><i class="bi bi-x-lg"></i></span>
            </div> -->
        </div>


        <!-- BILL TYPE BLOCK -->
        <div class="d-flex jcb aci gap-2 p-2">
            <div class="d-flex jcs aic gap-2">
                BILL NUMBER:
                <span class="bill-number fw-bold"></span>
            </div>

            <div class="d-flex jce aic gap-2">
                BILL DATE:
                <span class="bill-date fw-500"></span>
            </div>
        </div>

        <!-- PARTY DETAILS BLOCK -->
        <div class="p-2 d-flex jcs ais" style="border-top: 1px solid black; border-bottom: 1px solid black;">
            <div class="d-flex flex-column gap-0 w-50" id="billing"></div>
            <div class="d-flex flex-column gap-0 w-50" id="shipping"></div>
        </div>

        <!-- ITEMS BLOCK -->
        <div class="items flex-fill p-2" id="order-items"></div>

        <!-- TOTALS BLOCK -->
        <div class="d-flex jcs ais gap-2 p-2"
            style="border-top: 1px solid black; border-bottom: 1px solid black; min-height: 100px;">
            <div class="w-25">
                <div class="d-flex flex-column gap-0" id="bank-details"></div>
            </div>
            <div class="w-75 d-flex gap-2" id="order-totals">
                <div class="w-50">
                    <div class="d-flex flex-column gap-0">
                        <div class="d-flex jce aic gap-2 pb-1">
                            TOTAL QTY
                            <span class="quantity text-end fw-500" style="min-width: 75px;"></span>
                        </div>
                    </div>
                </div>
                <div class="w-50" id="totals"></div>
            </div>
        </div>

        <div class="d-flex p-2">
            <div class="w-75 d-flex flex-column gap-0">
                <span class="small fw-500 text-decoration-underline">Declaration</span>
                <span class="declaratin-msg">we Declare that this invoice shows the actual price of the goods described
                    and
                    that all particulars are true and correct.</span>

                <span class="my-auto comments"></span>

                <span class="mt-auto fw-bold">E & OE</span>
            </div>
            <div class="w-25 d-flex flex-column gap-1 jcb" style="min-height: 100px;">
                <span class="text-end">Authorized Signatory</span>

                <span class="text-end for-entity">For ENTITY</span>
            </div>
        </div>
    </div>

    <div class="text-center mt-2 small fst-italic view-order d-none" style="min-width: 768px;"> (This is a
        computer-generated document. No signature is required)
    </div>

    <div class="position-fixed top-0 end-0 mt-5 me-4 btn-group rounded text-dark d-print-none">
        <span class="btn btn-primary share px-3" title="Share Order"><i class="bi bi-share"></i></span>
        <span class="btn btn-primary print px-3" title="Print Order"><i class="bi bi-printer"></i></span>
        <span class="btn btn-primary close px-3" title="Close Order"><i class="bi bi-x-lg"></i></span>
    </div>

    <script src="/js/fb.js" type="module"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>